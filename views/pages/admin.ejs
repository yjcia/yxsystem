<div class="container">

        <div class="row admin-main">

            <div class="col-md-8">
                <form class="form-inline" role="form" id="queryConditionForm">
                    <div class="form-group">
                        <div class="btn-group">
                            <button type="button"
                            class="btn btn-default dropdown-toggle"
                            data-toggle="dropdown" id="conType">
                            ID <span class="caret"></span>
                            </button>
                            <ul id="conditionBtn" class="dropdown-menu" role="menu">
                                <li id="id" ><a>ID</a></li>
                                <li id="charge_cate"><a>Category</a></li>
                                <li id="amount"><a>Amount</a></li>
                                <!--<li id="date"><a>Date</a></li>-->
                            </ul>
                            <input type="hidden" id="selectConditionBtn" value="id">
                        </div>
                    </div>
                    <div class="form-group" id="queryConditionDiv">
                        <input type="text" class="form-control" id="idSearchCondition" placeholder="Enter ID">
                    </div>


                </form>
            </div>
            <div class="col-md-4">
                <div class="btn-group">
                    <button type="button" class="btn btn-default"
                            data-toggle="modal" data-target="#addChargeModal" onclick="resetAddForm()">Add</button>
                    <button type="button" class="btn btn-default">Import</button>
                    <button type="button" class="btn btn-default">Export</button>
                    <button type="button" class="btn btn-danger" onclick="batchDelete()">Batch Remove</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">

                <div class="form-group">
                    <button type="button"
                            class="btn btn-default dropdown-toggle"
                            data-toggle="dropdown" id="conType">
                        Date <span class="caret"></span>
                    </button>
                    <div class="btn-group">
                        <div id = 'queryDateFrom' class='input-append date form_date ' data-date=''>
                            <input class='form-control' size='16' type='text' value='' id='dateFrom'
                                   placeholder='Enter Date From'>
                            <span class='add-on'><i class='icon-th'></i></span>
                        </div>
                    </div>
                    -
                    <div class="btn-group">
                        <div id = 'queryDateTo' class='input-append date form_date ' data-date=''>
                            <input class='form-control' size='16' type='text' value='' id='dateTo'
                                   placeholder='Enter Date To'>
                            <span class='add-on'><i class='icon-th'></i></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-info" onclick="doSearch()">Search</button>
                </div>

            </div>

        </div>
        <div class="row">
            <div class="col-md-12">
                <table id="adminDataTable" class="table table-hover ">
                </table>
            </div>
        </div>
    </div>
    <div class="modal fade" id="addChargeModal" tabindex="-1" role="dialog"
    aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close"
                    data-dismiss="modal" aria-hidden="true">
                    &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                    Add Charge
                    </h4>
                </div>
                <div class="modal-body">
                    <form role="form" method="post" id="addForm">
                        <div class="form-group">
                            <label for="userName">User Name</label>
                            <select class="form-control" placeholder="Enter User" id="chargeUserInForm">

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="charge">Charge Desc</label>
                            <select class="form-control" placeholder="Enter Charge Cate" id="chargeDescInForm">
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="amount">Amount</label>
                            <input type="number" class="form-control" id="amountForAdd" placeholder="Enter Amount">
                        </div>
                        <div class="form-group">
                            <label for="chargeType">Type</label>
                            <select class="form-control" id="chargeType">
                                <option value="0">Rev</option>
                                <option value="1">Cost</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Date">Date</label>

                            <div id = "addDate" class="input-append date form_date " data-date="">
                                <input class="form-control" size="16" type="text" value="" id="date"
                                       placeholder="Enter Date">

                                <span class="add-on"><i class="icon-th"></i></span>
                            </div>
                        </div>
                        <!--<button type="button" class="btn btn-primary" onclick="addCharge()">-->
                            <!--Add-->
                        <!--</button>-->
                        <button type="button" class="btn btn-primary" onclick="addCharge()">
                            Add
                        </button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">
                            Close
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editChargeModal" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close"
                            data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        Edit Charge
                    </h4>
                </div>
                <div class="modal-body">
                    <form role="form" method="post" id="updateForm">
                        <div class="form-group">
                            <input type="hidden" class="form-control" id="editId">
                        </div>

                        <div class="form-group">
                            <label for="userName">User Name</label>
                            <select class="form-control" placeholder="Enter User" id="editChargeUserInForm">

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="charge">Charge Desc</label>
                            <select class="form-control" placeholder="Enter User" id="editChargeDescInForm">
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="amount">Amount</label>
                            <input type="number" class="form-control" id="editAmount" placeholder="Enter Amount">
                        </div>
                        <div class="form-group">
                            <label for="chargeType">Type</label>
                            <select class="form-control" id="editChargeType">
                                <option value="0">Rev</option>
                                <option value="1">Cost</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Date">Date</label>

                            <div id = "addDate" class="input-append date form_date " data-date="">
                                <input class="form-control" size="16" type="text" value="" id="editDate"
                                       placeholder="Enter Date">

                                <span class="add-on"><i class="icon-th"></i></span>
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary" onclick="updateCharge()">
                            Edit
                        </button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">
                            Close
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

